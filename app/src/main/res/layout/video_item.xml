<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorVideoItem"
    android:layout_margin="@dimen/thin_margin"
    >



    <ImageView
        android:id="@+id/video_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/video_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:padding="@dimen/thin_margin"
        android:src="@drawable/ic_ondemand_video_black_24dp"/>

    <TextView

        android:id="@+id/video_name"
        style="@style/VideoTextViewStyle"

        android:padding="@dimen/thin_margin"

        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"


        app:layout_constraintStart_toEndOf="@id/video_iv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Video Name" />

</android.support.constraint.ConstraintLayout>